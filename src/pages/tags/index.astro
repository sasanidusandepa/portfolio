---
import Layout from "../../components/layout.astro";
import PostListing from "../../components/post/post-list.astro";
import SlugList from "../../components/slug-list.astro";
import { BASE_PATH } from "../../config";

import { posts, tags } from "../../helpers";
---

<Layout>
  <SlugList slugs={tags} generateLink={(slug: string) => `${BASE_PATH}/tags/${encodeURI(slug)}`} />
  <PostListing posts={posts} />
</Layout>
